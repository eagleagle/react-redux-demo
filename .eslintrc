{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "eslint-plugin-promise",
    "eslint-plugin-standard",
    "eslint-plugin-redux-saga",
    "eslint-plugin-react"
  ],

  // 环境定义了预定义的全局变量。
  "env": {
    //环境定义了预定义的全局变量。更多在官网查看
    "browser": true,
    "node": true,
    "commonjs": true,
    "amd": true,
    "es6": true,
    "mocha": true
  },
  // JavaScript 语言选项
  "parserOptions": {
    // ECMAScript 版本
    "ecmaVersion": 7,
    "sourceType": "module",
    //module
    // 想使用的额外的语言特性:
    "ecmaFeatures": {
      // 允许在全局作用域下使用 return 语句
      "globalReturn": true,
      // impliedStric
      "impliedStrict": true,
      // 启用 JSX
      "jsx": true,
      //启用restspread
      "experimentalObjectRestSpread": true
    }
  },

  "rules": {
    "eqeqeq": "warn",
    "no-undef-init": "error",
    "camelcase": "error",
    "no-mixed-spaces-and-tabs": "error",
    "quotes": [ "error", "double",{ "avoidEscape": true, "allowTemplateLiterals": true} ],
    "object-curly-spacing": [ "warn", "always" ],
    "block-spacing": "warn",
    "semi": [ "error", "always" ],
    "keyword-spacing": "warn",
    "comma-dangle": [ "error", {
      "arrays": "never",
      "objects": "never",
      "imports": "never",
      "exports": "never",
      "functions": "ignore"
    }],
    "indent": [ "warn", 4, {
        "SwitchCase": 1,
        "VariableDeclarator": { "var": 1, "let": 1, "const": 1 }
    }],
    "space-before-function-paren": [ "error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "ignore"
    }],
    "no-unused-vars":[ "warn", {
        "vars": "all",
        "args": "after-used"
    }],
    "no-console":[ "error", {
        "allow":[ "log", "error", "warn" ]
    }],
    "no-extra-semi": [ "error" ],
    "react/jsx-uses-react": [ "error" ],
    "react/jsx-uses-vars": [ "error" ],
    "react/react-in-jsx-scope": [ "error" ]
  }
}